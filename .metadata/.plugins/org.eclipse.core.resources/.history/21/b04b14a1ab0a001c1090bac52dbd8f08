#include <stdio.h>
#include <stdlib.h>

int main(void) {
		setbuf(stdout,NULL);

		int numeroUno;
		int numeroDos;
		int resultado;
		float promedio;

		printf("Ingrese el numero uno: \n");
		scanf("%d",&numeroUno);

		printf("Ingrese el numero dos: \n");
		scanf("%d",&numeroDos);

		resultado= numeroUno + numeroDos;

		promedio = resultado / 2;

		printf("\nEste es el resultado de la suma %d",resultado);
		printf("\nEste es el resultado del promedio %f", promedio);


	return EXIT_SUCCESS;
}
